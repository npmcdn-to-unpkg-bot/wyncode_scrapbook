<p id="notice"><%= notice %></p>

<h2>WYNCODE SCRAPBOOK</h2>

<div class="fixed-action-btn vertical" style="bottom: 45px; right: 24px;">
   <a class="btn-floating btn-large lightblue">
     <i class="large material-icons">menu</i>
   </a>
   <ul>
     <li><a href="<%= new_picture_path %>" class="btn-floating black"><i class="material-icons">note_add</i></a></li>
   </ul>
 </div>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cohort</th>
      <th>Cat</th>
      <th>Upload</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><%= picture.cat_id %></td>
        <td><%= picture.cohort_id %></td>
        <td><%= image_tag picture.url %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

