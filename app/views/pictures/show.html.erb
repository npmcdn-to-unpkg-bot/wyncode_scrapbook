<p id="notice"><%= notice %></p>


<div class="show_pictures">
<ul>
  <li>Title: <%= @picture.title %></li>
  <li>Category: <%= @picture.cat_id %></li>
  <li>Cohort: <%= @picture.cohort_id %></li>
</ul>
</div>
<div id="solo_image">
  <%= image_tag @picture.avatar.large %>
</div>


<div class="fixed-action-btn vertical" style="bottom: 45px; right: 24px;">
   <a class="btn-floating btn-large lightblue">
     <i class="large material-icons">menu</i>
   </a>
   <ul>
     <li><a href="<%= pictures_path %>" class="btn-floating yellow"><i class="material-icons">mode_edit</i></a></li>
     <li><a href="<%= edit_picture_path(@picture) %>" class="btn-floating black"><i class="material-icons">E</i></a></li>
   </ul>
 </div>


